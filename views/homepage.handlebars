{{#if loggedIn}}
{{#each posts as |post|}}
<div class="card m-5">
    <div class="card-header">
        {{post.title}}<span class="float-right">{{user.name}} {{post.date_created}}</span>
    </div>
    <div class="card-body">
        {{post.content}}
    </div>    
</div>
{{/each}}
{{else}}
<div class="card mt-5 mx-auto w-75">
    <div class="card-header text-center">
        <h2>Please login to see posts</h2>
    </div>
</div>
{{/if}}
