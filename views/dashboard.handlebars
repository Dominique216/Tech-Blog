{{#if isCurrentUser}}
 {{!-- creates a button to display each post a user has made for the dashboard tab --}}
 <div class="d-flex flex-column flex-md-row align-items-center">
 <div class="w-50 card mt-5 ml-md-5 text-center">
    <img id="avatar" class="rounded-circle mx-auto mt-2 object-fit-scale" style="width: 150px; height: 150px;"
    alt="Default Avatar" data-type='{{image}}' />
    <div class="d-flex justify-content-center">
        {{!-- <form  enctype="multipart/form-data" class="w-50">
            <input id="avatar-pic" type="file" name="image" />
        </form>
    <button id="add-pic" type="button" class="btn btn-outline-info btn-sm" data-target="{{id}}">Submit</button>    --}}
    </div>
    
    <h4 class="m-5">{{name}}</h4>
    {{#if bio}}
        <p class="m-2">{{bio}}</p>
    {{else}}
        <p><em>Add a bio here...</em></p>
    {{/if}} 
           
    <button id="update-bio" type="button" data-toggle="modal" data-target="#updateModal" class="btn btn-outline-info mb-5 mx-5">Update Profile</button>
         <div class="modal fade" id="updateModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title mx-auto">Update Profile</h5>
                    </div>
                    <div class="modal-body">
                        <form enctype="multipart/form-data" >
                            <div class="form-group">
                                <label for="avatar-pic">Avatar</label>
                                    <input id="avatar-pic" type="file" name="image" />
                                <button id="add-pic" type="button" class="btn btn-outline-info btn-sm" data-target="{{id}}">Submit</button> 
                            </div>
                            <div class="form-group">
                                <label for="username-update">Username</label>
                                <input class="form-control" id="username-update" data-value="{{name}}"></input>
                            </div>
                            <div class="form-group">
                                <label for="bio-text">Bio</label>
                                <textarea class="form-control" id="bio-text-update" data-value="{{bio}}"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button id="update-profile-submit" type="button" class="btn btn-primary" data-target="{{id}}">Submit</button>
                    </div>
                </div>
            </div>
        </div>
 </div>
 
 <div class="w-50 text-center text-white ml-md-5">
    <h2 class="mt-5">My Posts</h2>
    {{#each posts as |post|}}
        <div class="text-center">
            <button type="button" class="btn btn-secondary btn-lg w-75 mt-5 post-btn" data-type="{{post.id}}">{{post.title}} created on {{post.date_created}} </button>
        </div>
    {{/each}}
    <div class="text-center">
        <button id="add-post"type="button" class="btn btn-outline-light btn-lg my-5 w-75">Add Post</button>
    </div> 
 </div>    
 </div>
 <script src="/js/dashboard.js"></script>
{{else}}
        {{!-- creates a button to display each post a user has made for the dashboard tab --}}
 <div class="d-flex flex-column flex-md-row mx-3 align-items-center">
    <div class="w-50 card mt-5 ml-md-5 text-center h-50">
        <img id="avatar" class="rounded-circle mx-auto mt-2 object-fit-scale" style="width: 150px; height: 150px;"
        alt="Default Avatar" data-type='{{image}}' />
        <h4 class="m-5">{{name}}</h4>
        {{#if bio}}
            <p class="m-2">{{bio}}</p>
        {{/if}}
    </div>
    <div class="w-50 text-center text-white ml-md-5">
        <h2 class="mt-5">{{name}}'s Posts</h2>
    {{#each posts as |post|}}
        <div class="card mt-5">
                <div class="card-header text-center text-dark">
                    {{post.title}}
                </div>
                <div class="card-body  text-dark">
                    {{post.content}}
                </div> 
                 <div class="card-footer">
                    <button id="comment-btn" class="btn btn-block btn-outline-info" type="button" data-type="{{post.id}}">Add Comment</button>
                    <button id='view-comments-btn' class="float-right btn btn-link text-info" data-type="{{post.id}}"><i style="font-size: 1.5rem" class="fa-solid fa-comment-dots"></i></button>
                </div>   
        </div>
    {{/each}}
    <div class="text-center">
        <button id="add-post"type="button" class="btn btn-outline-light btn-lg my-5 w-75">Add Post</button>
    </div> 
 </div>  
 <script src="/js/other-user-dash.js"></script> 
{{/if}}

