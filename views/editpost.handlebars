{{!-- creates the edit post card --}}
<div class="card mx-auto mt-5 w-75">
        <div class="card-header">
         Edit Post
        </div>
        <div class="card-body">
          <form>
            <div class="form-group">
              <label for="post-title">Title</label>
              <input id='filled-title' type="text" class="form-control" value="{{post.title}}">
            </div>
            <div class="form-group">
              <label for="post-content">Content</label>
              <textarea id="filled-content" class="form-control">{{post.content}}</textarea>
            </div>
            <div class="text-center">
              <button id="add-post" type="button" class="btn btn-outline-success btn-lg w-75 mb-3" data-id="{{post.id}}">Update Post</button>
          </div> 
          <div class="text-center">
              <button id="delete-post" type="button" class="btn btn-outline-success btn-lg w-75" data-id="{{post.id}}">Delete Post</button>
          </div> 
          </form>
        </div>
      </div>

<script src="/js/editpost.js"></script>